<div class="knowledge-base">
  {{#unless site.mobileView}}
    {{knowledge-base-title toggleMenu=(action 'toggleMenu')}}
  {{/unless}}

  {{knowledge-base-nav
    topicsList=topicsList
    expanded=menuExpanded
    toggleMenu=(action 'toggleMenu')}}

  <div class="knowledge-base-content">
    {{outlet}}
    {{#if isIndex}}
      {{description}}
    {{/if}}
  </div>
</div>
